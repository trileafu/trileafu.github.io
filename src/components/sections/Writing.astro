const posts = [
	{
		title: "Building Delightful UIs with Astro",
		summary:
			"How I pair content-driven pages with light client islands to keep things fast and maintainable.",
		tags: ["astro", "frontend", "performance"],
		date: "2025-12-02",
		link: "#",
	},
	{
		title: "Design Systems for Solo Makers",
		summary:
			"Practical constraints, token-driven theming, and component guardrails that scale without a team.",
		tags: ["design-system", "ui", "workflow"],
		date: "2025-10-15",
		link: "#",
	},
	{
		title: "Shipping Embedded + Cloud",
		summary:
			"Notes from bridging firmware, edge telemetry, and dashboards while keeping feedback loops tight.",
		tags: ["embedded", "cloud", "ops"],
		date: "2025-08-30",
		link: "#",
	},
	{
		title: "Frictionless Dev Environments",
		summary:
			"Dotfiles, reproducible stacks, and guardrails that keep contributors productive on day one.",
		tags: ["tooling", "dx", "automation"],
		date: "2025-07-12",
		link: "#",
	},
];
---

<div class="container" id="writing">
	<div
		class="sticky top-0 pt-15 pb-4 pr-4 rounded-br-2xl h-fit bg-white z-10 left-0 w-fit"
	>
		<h2
			class="bg-blue-100 text-xl outline-1 outline-blue-900 py-2 px-4 w-fit rounded-xs rounded-br-2xl"
		>
			writing
		</h2>
	</div>

	<div class="space-y-4">
		<p class="text-center text-lg">i write <b>blog articles</b> about my interest.</p>
		<div class="grid gap-4 md:grid-cols-2 xl:grid-cols-3">
			{posts.map((post) => (
				<article
					class="flex flex-col gap-3 rounded-2xl border border-gray-200 bg-white p-5 shadow-sm transition hover:-translate-y-1 hover:shadow-md"
				>
					<div class="flex items-center justify-between text-sm text-gray-600">
						<span class="font-semibold text-gray-800">{post.date}</span>
						<div class="flex flex-wrap gap-2">
							{post.tags.map((tag) => (
								<span class="rounded-full bg-gray-100 px-3 py-1 text-xs font-semibold text-gray-700">
									{tag}
								</span>
							))}
						</div>
					</div>
					<div class="space-y-2">
						<h3 class="text-lg font-bold leading-tight text-gray-900">{post.title}</h3>
						<p class="text-gray-700">{post.summary}</p>
					</div>
					<a
						href={post.link}
						target="_blank"
						rel="noreferrer"
						class="inline-flex items-center gap-2 text-blue-700 font-semibold hover:text-blue-900"
					>
						read
						<span aria-hidden="true">â†’</span>
					</a>
				</article>
			))}
		</div>
	</div>
</div>
