<div id="particles-js" class="fixed top-0 left-0 w-full h-full z-25"></div>

<!-- Load particles.js and prevent Partytown from processing it -->
<script type="text/javascript" src="/particles.js"></script>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    if (window.particlesJS) {
      window.particlesJS("particles-js", {
        particles: {
          number: {
            value: 80,
            density: {
              enable: true,
              value_area: 800,
            },
          },
          shape: {
            type: "image",
            image: {
              src: "/leaf.svg",
              width: 100,
              height: 100,
            },
          },
          move: {
            enable: true,
            speed: 2,
            direction: "bottom",
            straight: false,
            out_mode: "out",
          },
          size: {
            value: 10,
            random: true,
          },
          opacity: {
            value: 0.5,
            random: true,
          },
        },
        interactivity: {
          detect_on: "canvas",
          events: {
            onhover: {
              enable: false,
            },
            onclick: {
              enable: false,
            },
          },
        },
      });
    }
  });
</script>
